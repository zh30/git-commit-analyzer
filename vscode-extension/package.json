{
  "name": "git-commit-analyzer-vscode",
  "displayName": "Git Commit Analyzer",
  "description": "AI-powered commit message generation integrated with VS Code",
  "version": "1.0.0",
  "publisher": "git-commit-analyzer",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitCommitAnalyzer.generateMessage",
        "title": "Generate Commit Message",
        "icon": "$(wand)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "gitCommitAnalyzer.generateMessage",
          "when": "scmProvider == git && scmHasChanges",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "~16.18.126",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.19.0",
    "typescript": "^4.9.5"
  }
}